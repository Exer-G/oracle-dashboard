{
  "name": "oracle-tracker",
  "version": "1.0.0",
  "description": "Oracle Time Tracker - Desktop App by Exergy Designs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "author": "Exergy Designs",
  "license": "PROPRIETARY",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.0",
    "chart.js": "^4.4.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0"
  },
  "build": {
    "appId": "com.exergydesigns.oracle-tracker",
    "productName": "Oracle Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/uiohook-napi/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Oracle Tracker",
      "runAfterFinish": true
    }
  }
}
